{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
